<!DOCTYPE html>
<html lang="en">
  <%- include("partials/head"); -%>
  <body>
    <%- include("partials/header"); -%>
    <main class="container mt-3">
      <div class="row justify-content-center">
        <div class="col-8">
          <h2>Hello, <%= user.username %></h2>
          <hr />
          <div class="card mb-3">
            <div class="card-header">Add Blog</div>
            <div class="card-body">
              <form method="post" action="/profile">
                <div class="row mb-3">
                  <label for="title" class="col-sm-2 col-form-label"
                    >Title</label
                  >
                  <div class="col-sm-10">
                    <input
                      type="text"
                      name="title"
                      class="form-control"
                      id="title"
                    />
                  </div>
                </div>
                <div class="row mb-3">
                  <label for="text" class="col-sm-2 col-form-label">Text</label>
                  <div class="col-sm-10">
                    <textarea
                      name="text"
                      id="text"
                      class="form-control"
                    ></textarea>
                  </div>
                </div>
                <button type="submit" class="btn btn-primary">Post</button>
              </form>
            </div>
          </div>
          <% blogs.forEach(({title, username, text, createdAt }) => { %> <%-
          include("partials/card", {title, username, text, time:
          createdAt.toLocaleString() }) -%> <% }) %>
        </div>
      </div>
    </main>
  </body>
</html>
